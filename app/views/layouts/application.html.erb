<!DOCTYPE html>
<html>
  <head>
    <title>DesafioLibros</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div style="text-align:right">
        <%= link_to "Disponibles", books_available_path %>
        <%= link_to "Reservados", books_reserved_path %>
        <%= link_to "Pagados", books_bought_path %>
      </div>

      <%= yield %>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalBook" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="modalBookTitle" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalBookTitle">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" id="modalBody">

          </div>
          <div class="modal-footer" id="modalFooter">
            
          </div>
        </div>
      </div>
    </div>
    
  </body>
</html>
