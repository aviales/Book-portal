<h1>Books#reserved</h1>
<div id="books_list">
    <%= render @books %>
</div>

<!-- Modal -->
<div class="modal fade" id="modalPayBook" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="modalPayBookTitle" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalPayBookTitle">Confirmar Compra</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modalBodyPay">
        <%= form_tag( pay_book_path, method: "post", remote: true ) do %>
            <label>Seleccione el libro a pagar</label><br/>
            <%= select("book", "book_id", Book.where(status: 1).collect {|b| [b.title, b.id]}, {:include_blank => false} ,{class:'form-control'}) %>
            <br/>
            <%= submit_tag "Pagar", class:"btn btn-primary float-right" %>
        <% end %>
      </div>
      <div class="modal-footer" id="modalFooterPay">

      </div>
    </div>
  </div>
</div>